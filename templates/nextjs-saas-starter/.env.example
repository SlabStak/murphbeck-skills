# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ===========================================
# CLERK AUTHENTICATION
# Get these from: https://dashboard.clerk.com
# ===========================================
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# ===========================================
# DATABASE (SUPABASE)
# Get these from: https://supabase.com/dashboard
# ===========================================
DATABASE_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres"

# Supabase client (optional, if using Supabase features beyond Prisma)
NEXT_PUBLIC_SUPABASE_URL=https://[PROJECT].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=xxx
SUPABASE_SERVICE_ROLE_KEY=xxx

# ===========================================
# STRIPE PAYMENTS
# Get these from: https://dashboard.stripe.com
# ===========================================
STRIPE_SECRET_KEY=sk_test_xxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Stripe Price IDs (create products in Stripe Dashboard)
STRIPE_PRO_PRICE_ID=price_xxx
STRIPE_ENTERPRISE_PRICE_ID=price_xxx

# ===========================================
# EMAIL (RESEND)
# Get these from: https://resend.com/api-keys
# ===========================================
RESEND_API_KEY=re_xxx

# ===========================================
# ANALYTICS (POSTHOG)
# Get these from: https://posthog.com
# ===========================================
NEXT_PUBLIC_POSTHOG_KEY=phc_xxx
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ===========================================
# OPTIONAL INTEGRATIONS
# ===========================================

# OpenAI (if using AI features)
OPENAI_API_KEY=sk-xxx

# Uploadthing (file uploads)
UPLOADTHING_SECRET=sk_xxx
UPLOADTHING_APP_ID=xxx

# Sentry (error tracking)
SENTRY_DSN=https://xxx@sentry.io/xxx

# Redis (caching/rate limiting)
REDIS_URL=redis://localhost:6379

# Clerk Webhook Secret (for user sync)
CLERK_WEBHOOK_SECRET=whsec_xxx

# Admin API Key (for accessing admin endpoints)
ADMIN_API_KEY=your-admin-api-key
